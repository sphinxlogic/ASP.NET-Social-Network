<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="Fisharoo.FisharooCore.Properties.Settings.FisharooConnectionStringLocal"
      connectionString="Data Source=localhost\sqlexpress;Initial Catalog=fisharoo;Integrated Security=True"
      providerName="System.Data.SqlClient" />
    <add name="Fisharoo.FisharooCore.Properties.Settings.FisharooConnectionStringDevelopment"
      connectionString="Server=; Initial Catalog=fisharoo; User ID=; Pwd=; Trusted_Connection=False"
      providerName="System.Data.SqlClient" />
    <add name="Fisharoo.FisharooCore.Properties.Settings.FisharooConnectionStringProduction"
      connectionString="Server=; Initial Catalog=fisharoo; User ID=; Pwd=; Trusted_Connection=False"
      providerName="System.Data.SqlClient" />
  </connectionStrings>
  <applicationSettings>
    <Fisharoo.FisharooCore.Properties.Settings>
      <setting name="DefaultCacheDuration_Days" serializeAs="Int">
        <value>1</value>
      </setting>
      <setting name="DefaultCacheDuration_Hours" serializeAs="Int">
        <value>0</value>
      </setting>
      <setting name="DefaultCacheDuration_Minutes" serializeAs="Int">
        <value>0</value>
      </setting>
    </Fisharoo.FisharooCore.Properties.Settings>
  </applicationSettings>
  <appSettings>
    <add key="SiteName" value="Fisharoo"/>
    <add key="NumberOfRecordsInPage" value="20"/>
    <add key="NumberOfTagsInCloud" value="30"/>
    <!--
      CloudSortOrder - Possible options include the following:
        Random: randomly sorts the cloud each time
        Ascending: sorts the final value of the tag cloud from small to tall
        Descending: sorts the final value of the tag cloud from tall to small
    -->
    <add key="CloudSortOrder" value="Random"/>
    <add key="TagCloudSmallestFontSize" value="10"/>
    <add key="TagCloudLargestFontSize" value="30"/>
    <add key="RootURL" value="http://localhost:64810/"/>
    <add key="WebSiteURL" value="http://localhost:64810/"/>
    <add key="AdminSiteURL" value="http://localhost:64948/"/>

    <add key="DefaultCacheDuration_Days" value="0"/>
    <add key="DefaultCacheDuration_Hours" value="0"/>
    <add key="DefaultCacheDuration_Minutes" value="15"/>
    <add key="ToEmailAddress" value="website@fisharoo.com"/>
    <add key="FromEmailAddress" value="website@fisharoo.com"/>
  </appSettings>
</configuration>